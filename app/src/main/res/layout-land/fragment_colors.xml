<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_alignParentBottom="true"
    android:background="@mipmap/thema_color"
    android:gravity="center"
    android:orientation="horizontal"
    tools:context=".fragment.ColorsFragment">

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent">

        <fragment
            android:id="@+id/id_colors_fragment"
            android:name="com.andreyzarazka.babygame.fragment.ColorsBtnFragment"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            tools:layout="@layout/fragment_colors_btn" />

        <fragment
            android:id="@+id/id_text_colors_fragment"
            android:name="com.andreyzarazka.babygame.fragment.ColorsDescriptionFragment"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="2"
            tools:layout="@layout/fragment_colors_description" />
    </LinearLayout>
</RelativeLayout>